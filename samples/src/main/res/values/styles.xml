<resources>

    <!-- ### APPLICATION ======================================================================= -->

	<style name="Layout" parent="">
		<item name="android:paddingLeft">?attr/uiSpacingSecondary</item>
		<item name="android:paddingRight">?attr/uiSpacingSecondary</item>
		<item name="android:paddingTop">?attr/uiSpacingSecondary</item>
		<item name="android:paddingBottom">?attr/uiSpacingSecondary</item>
	</style>
	<style name="Layout.Section">
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="Layout.Item.List" parent="">
		<item name="android:paddingTop">?attr/uiSpacingSecondary</item>
		<item name="android:paddingBottom">?attr/uiSpacingSecondary</item>
		<item name="android:paddingLeft">?attr/uiSpacingSecondary</item>
		<item name="android:paddingRight">?attr/uiSpacingSecondary</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:gravity">center_vertical</item>
	</style>

    <style name="Widget.TextView.Section.Heading" parent="Ui.Widget.TextView">
		<item name="android:minHeight">48dip</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">?attr/colorPrimary</item>
    </style>
	<style name="Widget.TextView.Section.Label" parent="Ui.Widget.TextView">

	</style>
	<style name="Widget.TextView.Item.List.Title" parent="Ui.Widget.TextView">
		<item name="android:textAppearance">@style/TextAppearance.Widget.TextView.Item.List.Title</item>
	</style>
	<style name="Widget.TextView.Item.List.Title.Single">
		<item name="android:paddingTop">?attr/uiSpacingSecondary</item>
		<item name="android:paddingBottom">?attr/uiSpacingSecondary</item>
		<item name="android:paddingLeft">?attr/uiSpacingSecondary</item>
		<item name="android:paddingRight">?attr/uiSpacingSecondary</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="Widget.TextView.Item.List.Note" parent="Ui.Widget.TextView">
		<item name="android:textAppearance">@style/TextAppearance.Widget.TextView.Item.List.Note</item>
		<item name="android:paddingLeft">?attr/uiSpacingTertiary</item>
		<item name="android:paddingTop">?attr/uiSpacingTertiary</item>
	</style>

    <!-- ### STYLE ============================================================================= -->

    <!-- ## STYLE:Typography -->

    <style name="TextAppearance.Widget.TextView.Typography" parent="Ui.TextAppearance.Widget.TextView">
        <item name="uiFontPath">@string/config_font_amatic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Widget.Button.Typography" parent="Ui.TextAppearance.Widget.Button">
        <item name="uiFontPath">@string/config_font_dumb_3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Widget.EditText.Typography" parent="Ui.TextAppearance.Widget.EditText">
        <item name="uiFontPath">@string/config_font_redressed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ### COLLECTIONS ======================================================================= -->

    <style name="Collections.Widget.ImageView.Item.Grid.App.Icon" parent="">
        <item name="android:layout_width">62dip</item>
        <item name="android:layout_height">62dip</item>
    </style>

    <!-- ## COLLECTIONS:ViewPager -->
    <style name="Collections.ViewPager" parent="Ui.Widget.ViewPager"/>
</resources>
