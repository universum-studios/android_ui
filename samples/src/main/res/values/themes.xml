<resources>

    <style name="Theme" parent="Ui.Theme.Light">

        <!-- ### CONFIGURATION ================================================================= -->

        <item name="windowNoTitle">true</item>

        <!-- ### METRICS ======================================================================= -->

        <item name="samplesNavigationWidth">300dp</item>

        <!-- ### COLORS ======================================================================== -->

        <item name="colorAccent">@color/samples_accent</item>
        <item name="colorPrimary">@color/samples_primary</item>
        <item name="colorPrimaryDark">@color/samples_primary_dark</item>

        <!-- ### STYLES ======================================================================== -->

        <item name="android:actionOverflowButtonStyle">@style/Samples.Widget.ActionButton.OverFlow</item>
        <item name="drawerArrowStyle">@style/Samples.Widget.DrawerArrowStyle</item>
    </style>

    <style name="Theme.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Navigation" parent="Theme.Toolbar"/>

    <style name="Theme.Search" parent="Theme.Toolbar">
		<item name="uiSearchVectorIcon">@drawable/ui_vc_search_close</item>
	</style>
</resources>
