<universum.studios.android.ui.widget.ScrollViewWidget xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:ui="http://schemas.android.com/apk/res-auto"
												   android:layout_width="match_parent"
												   android:layout_height="match_parent">

	<LinearLayout
		style="@style/Ex.Layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<universum.studios.android.support.examples.widget.ExSectionHeadingView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/components_buttons_button" />

		<universum.studios.android.ui.widget.ButtonWidget
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button"/>

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.ButtonWidget
			style="?attr/uiColoredTextButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.ButtonWidget
			style="?attr/uiColoredButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button"/>

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.ButtonWidget
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.ButtonWidget
			style="?attr/uiColoredTextButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.ButtonWidget
			style="?attr/uiColoredButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.support.examples.widget.ExSectionHeadingView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/components_buttons_flat_button" />

		<universum.studios.android.ui.widget.FlatButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.FlatButton
			style="?attr/uiColoredTextFlatButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.FlatButton
			style="?attr/uiColoredFlatButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.FlatButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.FlatButton
			style="?attr/uiColoredTextFlatButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.ui.widget.FlatButton
			style="?attr/uiColoredFlatButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:minWidth="@dimen/components_buttons_button_min_width"
			android:text="@string/components_buttons_flat_button_disabled" />

		<include layout="@layout/spacer_vertical" />

		<universum.studios.android.support.examples.widget.ExSectionHeadingView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/components_buttons_floating_action_button" />

		<LinearLayout
			style="@style/Ex.Layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">

			<universum.studios.android.ui.widget.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_content_add"
				ui:uiFabSize="normal" />

			<include layout="@layout/spacer_horizontal_expand"/>

			<universum.studios.android.ui.widget.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_action_alarm_add"
				ui:uiFabSize="mini" />

			<include layout="@layout/spacer_horizontal_expand"/>

			<universum.studios.android.ui.widget.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_content_add"
				android:enabled="false"
				ui:uiFabSize="normal" />
		</LinearLayout>

		<universum.studios.android.support.examples.widget.ExSectionHeadingView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/components_buttons_icon_button" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<universum.studios.android.ui.widget.ImageButtonWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_alarm"
				ui:uiTint="#4CAF50" />

			<android.support.v4.widget.Space
				android:layout_width="48dip"
				android:layout_height="1dip" />

			<universum.studios.android.ui.widget.ImageButtonWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_backup"
				ui:uiTint="#2196f3" />
		</LinearLayout>
	</LinearLayout>
</universum.studios.android.ui.widget.ScrollViewWidget>