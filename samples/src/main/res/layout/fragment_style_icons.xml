<universum.studios.android.ui.widget.ScrollViewWidget xmlns:android="http://schemas.android.com/apk/res/android"
													  xmlns:ui="http://schemas.android.com/apk/res-auto"
													  android:layout_width="match_parent"
													  android:layout_height="match_parent">

	<LinearLayout
		style="@style/Layout.Section"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			style="@style/Widget.TextView.Section.Heading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/style_navigation_icons" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<universum.studios.android.ui.widget.ImageViewWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_account_balance_wallet"
				ui:uiTint="#f44336" />

			<include layout="@layout/spacer_horizontal_expand" />

			<universum.studios.android.ui.widget.ImageViewWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_alarm"
				ui:uiTint="#4CAF50" />

			<include layout="@layout/spacer_horizontal_expand" />

			<universum.studios.android.ui.widget.ImageViewWidget
				android:id="@+id/fragment_style_icons_image_view_favorite"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_favorite"
				ui:uiTint="#2196f3" />

			<include layout="@layout/spacer_horizontal_expand" />

			<universum.studios.android.ui.widget.ImageViewWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_backup"
				ui:uiTint="#ff9800" />
		</LinearLayout>

		<TextView
			style="@style/Widget.TextView.Section.Heading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/style_navigation_icons_vector" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<universum.studios.android.ui.widget.ImageViewWidget
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				ui:uiTint="#CDDC39"
				ui:uiVectorSrc="@drawable/ic_vc_motorcycle" />
		</LinearLayout>

		<TextView
			style="@style/Widget.TextView.Section.Heading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/style_navigation_icons_compound" />

		<universum.studios.android.ui.widget.TextViewWidget
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:drawableBottom="@drawable/ic_action_account_balance_wallet"
			android:drawableLeft="@drawable/ic_action_favorite"
			android:drawableRight="@drawable/ic_action_backup"
			android:drawableTop="@drawable/ic_action_alarm"
			android:gravity="center"
			android:text="Text with compound icons"
			ui:uiDrawableTint="#2196F3" />

		<TextView
			style="@style/Widget.TextView.Section.Heading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/style_navigation_icons_vector_compound" />

		<universum.studios.android.ui.widget.TextViewWidget
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="Text with compound vector icons"
			ui:uiDrawableTint="#4CAF50"
			ui:uiVectorDrawableBottom="@drawable/ic_vc_pets"
			ui:uiVectorDrawableEnd="@drawable/ic_vc_pets"
			ui:uiVectorDrawableStart="@drawable/ic_vc_motorcycle"
			ui:uiVectorDrawableTop="@drawable/ic_vc_motorcycle" />
	</LinearLayout>
</universum.studios.android.ui.widget.ScrollViewWidget>