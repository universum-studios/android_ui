<universum.studios.android.ui.widget.ScrollViewWidget xmlns:android="http://schemas.android.com/apk/res/android"
														   xmlns:ui="http://schemas.android.com/apk/res-auto"
														   android:layout_width="match_parent"
														   android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<universum.studios.android.support.examples.widget.ExSectionHeadingView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/layout_metrics_and_keylines_toolbar"
			android:layout_marginLeft="@dimen/ex_layout_padding_start"/>

		<android.support.v7.widget.Toolbar
			android:id="@+id/fragment_layout_metrics_and_keylines_toolbar_1"
			style="@style/Ui.Widget.Toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#22666666"
			android:elevation="0dip"/>
	</LinearLayout>
</universum.studios.android.ui.widget.ScrollViewWidget>
