<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="?attr/exLayoutListItemStyle"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal">

    <ImageView
            android:id="@+id/item_grid_app_image_view_icon"
            style="@style/Collections.Widget.ImageView.Item.Grid.App.Icon"/>

    <TextView
            android:id="@+id/item_grid_app_text_view_name"
            style="@style/Ex.Widget.TextView.Item.List.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
</LinearLayout>