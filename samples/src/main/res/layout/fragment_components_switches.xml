<universum.studios.android.ui.widget.ScrollViewWidget
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ui="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                style="@style/Ex.Layout.Section"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/Ex.Widget.TextView.Section.Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box"/>

            <universum.studios.android.ui.widget.CheckBoxWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.CheckBoxWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box"
                    android:checked="true"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.CheckBoxWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box"
                    android:checked="true"
                    android:buttonTint="#f44336"
                    ui:uiButtonTint="#f44336"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.CheckBoxWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box_disabled"
                    android:enabled="false"
                    android:checked="false"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.CheckBoxWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_check_box_disabled"
                    android:enabled="false"
                    android:checked="true"/>

        </LinearLayout>

        <LinearLayout
                style="@style/Ex.Layout.Section"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/Ex.Widget.TextView.Section.Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_radio_button"/>

            <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <universum.studios.android.ui.widget.RadioButtonWidget
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/components_switches_radio_button"/>

                <include layout="@layout/spacer_vertical"/>

                <universum.studios.android.ui.widget.RadioButtonWidget
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/components_switches_radio_button"/>

                <include layout="@layout/spacer_vertical"/>

                <universum.studios.android.ui.widget.RadioButtonWidget
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/components_switches_radio_button"
                        android:buttonTint="#f44336"
                        ui:uiButtonTint="#f44336"/>

                <include layout="@layout/spacer_vertical"/>

                <universum.studios.android.ui.widget.RadioButtonWidget
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/components_switches_radio_button_disabled"
                        android:enabled="false"
                        android:checked="false"/>

                <include layout="@layout/spacer_vertical"/>

                <universum.studios.android.ui.widget.RadioButtonWidget
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/components_switches_radio_button_disabled"
                        android:enabled="false"
                        android:checked="true"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
                style="@style/Ex.Layout.Section"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/Ex.Widget.TextView.Section.Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch"/>

            <universum.studios.android.ui.widget.SwitchWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.SwitchWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch"
                    android:checked="true"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.SwitchWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch"
                    android:checked="true"
                    ui:uiThumbTint="#f44336"
                    ui:uiTrackTint="#44f44336"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.SwitchWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch_disabled"
                    android:enabled="false"
                    android:checked="false"/>

            <include layout="@layout/spacer_vertical"/>

            <universum.studios.android.ui.widget.SwitchWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/components_switches_switch_disabled"
                    android:enabled="false"
                    android:checked="true"/>
        </LinearLayout>
    </LinearLayout>

</universum.studios.android.ui.widget.ScrollViewWidget>