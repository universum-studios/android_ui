<manifest package="universum.studios.android.samples.ui"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/samples_ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/Theme">

		<activity
			android:name=".ui.MainActivity"
			android:theme="@style/Theme.Navigation">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<meta-data android:name="universum.studios.android.support.samples.SamplesMetaData.NAVIGATION_MENU" android:resource="@menu/navigation"/>
			<meta-data android:name="universum.studios.android.support.samples.SamplesMetaData.INTRO_TEXT" android:resource="@string/app_intro"/>
		</activity>

		<activity android:name=".ui.PagerActivity" />

		<activity
			android:name=".ui.SearchActivity"
			android:theme="@style/Theme.Search" />
	</application>
</manifest>