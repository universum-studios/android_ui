<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Search theme attributes. -->
    <declare-styleable name="Ui.Theme.Search">
		<!-- Color for the text of SearchView's EditText. -->
		<attr name="uiSearchTextColor" format="color"/>
		<!-- Color for the text hint of SearchView's EditText. -->
		<attr name="uiSearchTextColorHint" format="color"/>
        <!-- Color for the text handle of SearchView's EditText. -->
        <attr name="uiSearchSelectHandleColor" format="color"/>
        <!-- Style for SearchView widget. -->
        <attr name="uiSearchViewStyle" format="reference"/>
        <!-- Style for AutoCompleteTextView input of SearchView widget. -->
        <attr name="uiSearchInputStyle" format="reference"/>
        <!-- Style for icon of SearchView widget. -->
        <attr name="uiSearchIconStyle" format="reference"/>
		<!-- Vector icon for the SearchView widget. -->
		<attr name="uiSearchVectorIcon" format="reference"/>
		<!-- Style for CircularProgressBar of SearchView widget. -->
		<attr name="uiSearchProgressBarStyle" format="reference"/>
        <!-- Style for clear button of SearchView widget. -->
        <attr name="uiSearchButtonClearStyle" format="reference"/>
        <!-- Style for mic button of SearchView widget. -->
        <attr name="uiSearchButtonMicStyle" format="reference"/>
    </declare-styleable>

    <!-- SearchView attributes. -->
    <declare-styleable name="Ui.SearchView">
        <!-- Re-used. -->
        <attr name="android:queryHint"/>
        <!-- Re-used. -->
        <attr name="uiTint"/>
        <!-- Re-used. -->
        <attr name="uiTintMode"/>
		<!-- Re-used. -->
		<attr name="uiRevealDuration"/>
		<!-- Re-used. -->
		<attr name="uiConcealDuration"/>
		<!-- Re-used. -->
		<attr name="uiRevealInterpolator"/>
    </declare-styleable>
</resources>