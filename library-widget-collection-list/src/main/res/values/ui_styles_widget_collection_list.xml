<resources>

	<!-- ### COLLECTION ======================================================================== -->

	<!-- Style for ListView widget. -->
	<style name="Ui.Widget.ListView" parent="Ui.Base.Widget.ListView">
		<item name="android:listSelector">?attr/uiCollectionItemBackground</item>
		<item name="uiRefreshDistance">144dp</item>
		<item name="uiRefreshPosition">0.5</item>
		<item name="uiRefreshSettlePosition">0.5</item>
	</style>

	<!-- Light style for ListView widget. -->
	<style name="Ui.Widget.Light.ListView" parent="Ui.Widget.ListView"/>

	<!-- Style for drop down ListView widget. -->
	<style name="Ui.Widget.ListView.DropDown" parent="Ui.Base.Widget.ListView.DropDown">
		<item name="android:listSelector">?attr/uiCollectionItemBackground</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0dp</item>
	</style>

	<!-- Light style for drop down ListView widget. -->
	<style name="Ui.Widget.Light.ListView.DropDown" parent="Ui.Widget.ListView.DropDown"/>
</resources>