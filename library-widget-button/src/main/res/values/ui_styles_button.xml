<resources>

	<!-- ### BUTTON ============================================================================ -->

	<!-- Style for Button widget. -->
	<style name="Ui.Widget.Button" parent="Ui.Base.Widget.Button">
		<item name="android:textAppearance">?android:attr/textAppearanceButton</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColor">@null</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

	<!-- Light style for Button widget. -->
	<style name="Ui.Widget.Light.Button" parent="Ui.Base.Widget.Light.Button">
		<item name="android:textAppearance">?android:attr/textAppearanceButton</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColor">@null</item>
	</style>

	<!-- Style for Button widget with colored text. -->
	<style name="Ui.Widget.Button.Colored.Text" parent="Ui.Widget.Button">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.Button.Colored.Text</item>
	</style>

	<!-- Light style for Button widget with colored text. -->
	<style name="Ui.Widget.Light.Button.Colored.Text" parent="Ui.Widget.Light.Button">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.Button.Colored.Text</item>
	</style>

	<!-- Style for Button widget with colored background. -->
	<style name="Ui.Widget.Button.Colored.Background" parent="Ui.Base.Widget.Button.Colored.Background">
		<item name="android:background">@drawable/ui_btn_colored_bg</item>
	</style>

	<!-- Light style for Button widget with colored background. -->
	<style name="Ui.Widget.Light.Button.Colored.Background" parent="Ui.Widget.Button.Colored.Background">
		<item name="android:background">@drawable/ui_light_btn_colored_bg</item>
	</style>

	<!-- Style for flat Button widget. -->
	<style name="Ui.Widget.Button.Flat" parent="Ui.Base.Widget.Button.Flat">
		<item name="android:background">@drawable/ui_btn_flat</item>
	</style>

	<!-- Light style for flat Button widget. -->
	<style name="Ui.Widget.Light.Button.Flat" parent="Ui.Widget.Button.Flat">
		<item name="android:background">@drawable/ui_light_btn_flat</item>
	</style>

	<!-- Style for flat Button widget with colored text. -->
	<style name="Ui.Widget.Button.Flat.Colored.Text" parent="Ui.Widget.Button.Flat">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.Button.Colored.Text</item>
	</style>

	<!-- Light style for flat Button widget with colored text. -->
	<style name="Ui.Widget.Light.Button.Flat.Colored.Text" parent="Ui.Widget.Light.Button.Flat">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.Button.Colored.Text</item>
	</style>

	<!-- Style for flat Button widget with colored background. -->
	<style name="Ui.Widget.Button.Flat.Colored.Background" parent="Ui.Base.Widget.Button.Flat.Colored.Background">
		<item name="android:background">@drawable/ui_btn_flat_colored_bg</item>
	</style>

	<!-- Light style for flat Button widget with colored background. -->
	<style name="Ui.Widget.Light.Button.Flat.Colored.Background" parent="Ui.Widget.Button.Flat.Colored.Background"/>
</resources>