<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button theme attributes. -->
    <declare-styleable name="Ui.Theme.Button">
        <!-- Style for Button widget with colored background. -->
        <attr name="uiColoredButtonStyle" format="reference"/>
        <!-- Style for Button widget with colored text. -->
        <attr name="uiColoredTextButtonStyle" format="reference"/>
        <!-- Style for FlatButton widget. -->
        <attr name="uiFlatButtonStyle" format="reference"/>
        <!-- Style for FlatButton widget with colored background. -->
        <attr name="uiColoredFlatButtonStyle" format="reference"/>
        <!-- Style for FlatButton widget with colored text. -->
        <attr name="uiColoredTextFlatButtonStyle" format="reference"/>
    </declare-styleable>

    <!-- Button attributes. -->
    <declare-styleable name="Ui.Button">
		<!-- Re-used. -->
		<attr name="uiVectorDrawableStart"/>
		<!-- Re-used. -->
		<attr name="uiVectorDrawableEnd"/>
		<!-- Re-used. -->
		<attr name="uiVectorDrawableTop"/>
		<!-- Re-used. -->
		<attr name="uiVectorDrawableBottom"/>
		<!-- Re-used. -->
		<attr name="uiDrawableTint"/>
		<!-- Re-used. -->
		<attr name="uiDrawableTintMode"/>
        <!-- Re-used. -->
        <attr name="uiBackgroundTint"/>
        <!-- Re-used. -->
        <attr name="uiBackgroundTintMode"/>
    </declare-styleable>

	<!-- ActionTextButton attributes. -->
	<declare-styleable name="Ui.ActionTextButton">
		<!-- Re-used. -->
		<attr name="android:text"/>
		<!-- Re-used. -->
		<attr name="android:paddingLeft"/>
		<!-- Re-used. -->
		<attr name="android:paddingRight"/>
	</declare-styleable>
</resources>