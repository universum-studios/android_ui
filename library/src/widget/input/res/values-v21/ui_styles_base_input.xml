<resources>

	<!-- ### SEARCH ============================================================================ -->

	<!-- Base style for SearchView widget. (API 21) -->
	<style name="Ui.Base.Widget.SearchView" parent="Ui.Widget">
		<item name="uiRevealDuration">@android:integer/config_longAnimTime</item>
		<item name="uiConcealDuration">@android:integer/config_mediumAnimTime</item>
	</style>

	<!-- Base style for AutoCompleteTextView widget of SearchView. (API 21) -->
	<style name="Ui.Base.Widget.AutoCompleteTextView.Search" parent="Ui.Widget.AutoCompleteTextView">
		<item name="android:textCursorDrawable">@drawable/ui_search_text_cursor</item>
		<item name="android:textSelectHandle">@drawable/ui_search_text_select_handle_middle</item>
		<item name="android:textSelectHandleLeft">@drawable/ui_search_text_select_handle_left</item>
		<item name="android:textSelectHandleRight">@drawable/ui_search_text_select_handle_right</item>
		<item name="android:layout_marginStart">?attr/uiSpacingPrimary</item>
	</style>

	<!-- Base light style for AutoCompleteTextView widget of SearchView. (API 21) -->
	<style name="Ui.Base.Widget.Light.AutoCompleteTextView.Search" parent="Ui.Widget.Light.AutoCompleteTextView">
		<item name="android:textCursorDrawable">@drawable/ui_light_search_text_cursor</item>
		<item name="android:textSelectHandle">@drawable/ui_search_text_select_handle_middle</item>
		<item name="android:textSelectHandleLeft">@drawable/ui_search_text_select_handle_left</item>
		<item name="android:textSelectHandleRight">@drawable/ui_search_text_select_handle_right</item>
		<item name="android:layout_marginStart">?attr/uiSpacingPrimary</item>
	</style>
</resources>