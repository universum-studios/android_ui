<resources>

	<!-- AVAILABLE FONT FAMILIES

		Roboto regular                  [sans-serif]
		Roboto italic                   [sans-serif]
		Roboto bold                     [sans-serif]
		Roboto bold italic              [sans-serif]
		Roboto-Light                    [sans-serif-light]
		Roboto-Light italic             [sans-serif-light]
		Roboto-Thin                     [sans-serif-thin] (since Android 4.2)
		Roboto-Thin italic              [sans-serif-thin] (since Android 4.2)
		Roboto-Condensed                [sans-serif-condensed]
		Roboto-Condensed italic         [sans-serif-condensed]
		Roboto-Condensed bold           [sans-serif-condensed]
		Roboto-Condensed bold italic    [sans-serif-condensed]
		Roboto-Medium                   [sans-serif-medium] (since Android 5.0)
		Roboto-Medium italic            [sans-serif-medium] (since Android 5.0)

	-->

	<!-- ### INPUT LAYOUT ====================================================================== -->

	<!-- TextAppearance style for InputLayout's TextViews. -->
	<style name="Ui.TextAppearance.Widget.TextView.InputLayout">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/ui_txt_label</item>
		<item name="android:ellipsize">end</item>
	</style>

	<!-- Light TextAppearance style for InputLayout's TextViews. -->
	<style name="Ui.TextAppearance.Light.Widget.TextView.InputLayout" parent="Ui.TextAppearance.Widget.TextView.InputLayout">
		<item name="android:textColor">@color/ui_light_txt_label</item>
	</style>

	<!-- ### SEARCH ============================================================================ -->

	<!-- TextAppearance style for SearView's EditText. -->
	<style name="Ui.TextAppearance.Widget.SearchView">
		<item name="android:textColor">?attr/uiSearchTextColor</item>
		<item name="android:textColorHint">?attr/uiSearchTextColorHint</item>
	</style>
</resources>