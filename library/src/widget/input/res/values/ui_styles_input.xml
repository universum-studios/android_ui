<resources>

	<!-- ### INPUT LAYOUT ====================================================================== -->

	<!-- Parent style for InputLayout based widgets. -->
	<style name="Ui.Widget.InputLayout">
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="uiInputFeatures">label|note</item>
	</style>

	<!-- Style for EditLayout widget. -->
	<style name="Ui.Widget.EditLayout" parent="Ui.Widget.InputLayout">
		<item name="uiInputFeatures">label|note|constraint</item>
		<item name="uiFloatingLabelAnimationIn">@anim/ui_floating_label_in</item>
		<item name="uiFloatingLabelAnimationOut">@anim/ui_floating_label_out</item>
	</style>

	<!-- Light style for EditLayout widget. -->
	<style name="Ui.Widget.Light.EditLayout" parent="Ui.Widget.EditLayout"/>

	<!-- Style for SpinnerLayout widget. -->
	<style name="Ui.Widget.SpinnerLayout" parent="Ui.Widget.InputLayout"/>

	<!-- Light style for SpinnerLayout widget. -->
	<style name="Ui.Widget.Light.SpinnerLayout" parent="Ui.Widget.SpinnerLayout"/>

	<!-- Parent parent style for InputLayout TextViews. -->
	<style name="Ui.Widget.TextView.InputLayout">
		<item name="android:textAppearance">?attr/uiInputLayoutTextAppearance</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<!-- Style for label TextView widget of InputLayout. -->
	<style name="Ui.Widget.TextView.InputLayout.Label">
		<item name="android:paddingLeft">4dp</item>
		<!--
			Pass here transparent color, so the EditLayout will create default color selector with
			accent color from the current theme.
		-->
		<item name="android:textColor">@android:color/transparent</item>
	</style>

	<!-- Light style for label TextView widget of InputLayout. -->
	<style name="Ui.Widget.Light.TextView.InputLayout.Label" parent="Ui.Widget.TextView.InputLayout.Label"/>

	<!-- Style for note/error TextView widget of InputLayout. -->
	<style name="Ui.Widget.TextView.InputLayout.Note">
		<item name="android:paddingLeft">4dp</item>
	</style>

	<!-- Light style for note/error TextView widget of InputLayout. -->
	<style name="Ui.Widget.Light.TextView.InputLayout.Note" parent="Ui.Widget.TextView.InputLayout.Note"/>

	<!-- Style for constraint TextView widget of InputLayout. -->
	<style name="Ui.Widget.TextView.InputLayout.Constraint">
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
	</style>

	<!-- Light style for constraint TextView widget of InputLayout. -->
	<style name="Ui.Widget.Light.TextView.InputLayout.Constraint" parent="Ui.Widget.TextView.InputLayout.Constraint"/>

	<!-- ### EDIT TEXT INPUT =================================================================== -->

	<!-- ### SPINNER INPUT ===================================================================== -->

	<!-- Style for Spinner widget used as input view for InputLayout. -->
	<style name="Ui.Widget.Spinner.Input">
		<item name="android:background">@drawable/ui_spinner_input</item>
	</style>

	<!-- Light style for Spinner widget used as input view for InputLayout. -->
	<style name="Ui.Widget.Light.Spinner.Input" parent="Ui.Widget.Spinner.Input"/>

	<!-- ### SEARCH ============================================================================ -->

	<!-- Style for SearchView widget. -->
	<style name="Ui.Widget.SearchView" parent="Ui.Base.Widget.SearchView">
		<item name="uiTint">#FFFFFFFF</item>
		<item name="android:background">#FF222222</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:paddingLeft">?attr/uiSpacingTertiary</item>
		<item name="android:paddingRight">?attr/uiSpacingTertiary</item>
	</style>

	<!-- Light style for SearchView widget. -->
	<style name="Ui.Widget.Light.SearchView" parent="Ui.Widget.SearchView">
		<item name="uiTint">#FF222222</item>
		<item name="android:background">#FFFFFFFF</item>
	</style>

	<!-- Style for AutoCompleteTextView input of SearchView widget. -->
	<style name="Ui.Widget.AutoCompleteTextView.Search" parent="Ui.Base.Widget.AutoCompleteTextView.Search">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.SearchView</item>
		<item name="android:background">@null</item>
		<item name="android:singleLine">true</item>
		<item name="android:imeOptions">actionSearch</item>
	</style>

	<!-- Light style for AutoCompleteTextView input of SearchView widget. -->
	<style name="Ui.Widget.Light.AutoCompleteTextView.Search" parent="Ui.Base.Widget.Light.AutoCompleteTextView.Search">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.SearchView</item>
		<item name="android:background">@null</item>
		<item name="android:singleLine">true</item>
		<item name="android:imeOptions">actionSearch</item>
	</style>

	<!-- Parent style for ImageButtons of SearchView widget. -->
	<style name="Ui.Widget.ImageButton.Search" parent="Ui.Widget.ImageButton">
		<item name="android:background">@drawable/ui_btn_image</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>

	<!-- Parent style for light ImageButtons of SearchView widget. -->
	<style name="Ui.Widget.Light.ImageButton.Search" parent="Ui.Widget.ImageButton.Search">
		<item name="android:background">@drawable/ui_light_btn_image</item>
	</style>

	<!-- Style for icon ImageButton of SearchView widget. -->
	<style name="Ui.Widget.ImageButton.Search.Icon">
		<item name="uiVectorSrc">?attr/uiSearchVectorIcon</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">false</item>
	</style>

	<!-- Light style for icon ImageButton of SearchView widget. -->
	<style name="Ui.Widget.Light.ImageButton.Search.Icon">
		<item name="uiVectorSrc">?attr/uiSearchVectorIcon</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">false</item>
	</style>

	<!-- Style for icon CircularProgressBar of SearchView widget. -->
	<style name="Ui.Widget.ProgressBar.Search" parent="Ui.Widget">
		<item name="uiColorProgress">?attr/colorAccent</item>
		<item name="android:thickness">2dp</item>
		<item name="android:minWidth">24dp</item>
		<item name="android:minHeight">24dp</item>
		<item name="android:maxWidth">24dp</item>
		<item name="android:maxHeight">24dp</item>
		<item name="uiCircularProgressMode">indeterminate</item>
	</style>

	<!-- Light style for icon CircularProgressBar of SearchView widget. -->
	<style name="Ui.Widget.Light.ProgressBar.Search" parent="Ui.Widget.ProgressBar.Search"/>

	<!-- Style for clear ImageButton of SearchView widget. -->
	<style name="Ui.Widget.ImageButton.Search.Clear">
		<item name="uiVectorSrc">@drawable/ui_vc_search_clear</item>
	</style>

	<!-- Light style for clear ImageButton of SearchView widget. -->
	<style name="Ui.Widget.Light.ImageButton.Search.Clear">
		<item name="uiVectorSrc">@drawable/ui_vc_search_clear</item>
	</style>

	<!-- Style for mic ImageButton of SearchView widget. -->
	<style name="Ui.Widget.ImageButton.Search.Mic">
		<item name="uiVectorSrc">@drawable/ui_vc_search_mic</item>
	</style>

	<!-- Light style for mic ImageButton of SearchView widget. -->
	<style name="Ui.Widget.Light.ImageButton.Search.Mic">
		<item name="uiVectorSrc">@drawable/ui_vc_search_mic</item>
	</style>
</resources>