<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<universum.studios.android.ui.widget.CircularProgressBar
			android:id="@id/ui_search_progress"
			style="?attr/uiSearchProgressBarStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="invisible"/>

		<universum.studios.android.ui.widget.ImageButtonWidget
			android:id="@id/ui_search_icon"
			style="?attr/uiSearchIconStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center" />
	</FrameLayout>

	<universum.studios.android.ui.widget.AutoCompleteTextViewWidget
		android:id="@id/ui_search_input"
		style="?attr/uiSearchInputStyle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1" />

	<universum.studios.android.ui.widget.ImageButtonWidget
		android:id="@id/ui_search_mic"
		style="?attr/uiSearchButtonMicStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<universum.studios.android.ui.widget.ImageButtonWidget
		android:id="@id/ui_search_clear"
		style="?attr/uiSearchButtonClearStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone" />
</merge>