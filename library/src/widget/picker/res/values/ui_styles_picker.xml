<resources>

	<!-- ### SLIDER ============================================================================ -->

	<!-- Style for SeekBar widget. -->
	<style name="Ui.Widget.SeekBar" parent="Ui.Base.Widget.SeekBar"/>

	<!-- Light style for SeekBar widget. -->
	<style name="Ui.Widget.Light.SeekBar" parent="Ui.Widget.SeekBar"/>

	<!-- Style for discrete SeekBar widget. -->
	<style name="Ui.Widget.SeekBar.Discrete">
		<item name="uiDiscrete">true</item>
		<item name="uiDiscretePreviewEnabled">false</item>
		<item name="uiDiscreteIntervalRatio">0.2</item>
		<item name="uiDiscreteIndicator">@drawable/ui_scrubber_discrete_indicator</item>
		<item name="uiDiscreteIndicatorTextAppearance">@style/Ui.TextAppearance.Widget.SeekBar.DiscreteIndicator</item>
		<item name="uiDiscreteIndicatorTextGravity">center_horizontal</item>
		<item name="uiDiscreteIndicatorTextPaddingTop">10dp</item>
		<item name="uiDiscreteIntervalTickMarkColor">#FFDDDDDD</item>
		<item name="uiDiscreteIntervalTickMarkRadius">2dp</item>
	</style>

	<!-- Light style for discrete SeekBar widget. -->
	<style name="Ui.Widget.Light.SeekBar.Discrete" parent="Ui.Widget.SeekBar.Discrete">
		<item name="uiDiscreteIntervalTickMarkColor">#FF111111</item>
	</style>

	<!-- ### PICKER ============================================================================ -->

	<!-- Parent style for NumberPicker widgets. -->
	<style name="Ui.Widget.NumberPicker" parent="Ui.Base.Widget.NumberPicker">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.NumberPicker</item>
		<item name="uiSelectionIndicator">@drawable/ui_selector_number_picker</item>
		<item name="uiPickerBearingLineColor">?attr/colorControlActivated</item>
		<item name="uiPickerBearingLineThickness">2dp</item>
	</style>

	<!-- Style for Circular NumberPicker widget. -->
	<style name="Ui.Widget.NumberPicker.Circular">
		<item name="android:radius">128dp</item>
		<item name="uiPickerMiddleCircleColor">?attr/colorControlActivated</item>
		<item name="uiPickerMiddleCircleRadius">3dp</item>
		<item name="android:background">@drawable/ui_bg_number_picker_circular</item>
	</style>

	<!-- Light style for Circular NumberPicker widget. -->
	<style name="Ui.Widget.Light.NumberPicker.Circular" parent="Ui.Widget.NumberPicker.Circular">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Light.Widget.NumberPicker</item>
		<item name="android:background">@drawable/ui_light_bg_number_picker_circular</item>
	</style>

	<!-- Style for CalendarView widget. -->
	<style name="Ui.Widget.CalendarView">
		<item name="android:orientation">horizontal</item>
		<item name="android:listSelector">@drawable/ui_selector_transparent</item>
		<item name="android:scrollbars">none</item>
		<item name="uiFlingMinVelocity">250</item>
		<item name="uiFlingMaxVelocity">750</item>
		<item name="uiScrollSpeedPerInch">50.0</item>
	</style>

	<!-- Light style for CalendarView widget. -->
	<style name="Ui.Widget.Light.CalendarView" parent="Ui.Widget.CalendarView"/>

	<!-- Style for MonthView widget. -->
	<style name="Ui.Widget.MonthView" parent="Ui.Base.Widget.MonthView">
		<item name="android:paddingLeft">?attr/uiSpacingPrimary</item>
		<item name="android:paddingTop">?attr/uiSpacingPrimary</item>
		<item name="android:paddingRight">?attr/uiSpacingPrimary</item>
		<item name="android:paddingBottom">?attr/uiSpacingPrimary</item>
		<item name="uiMonthDayLettersOffsetVertical">32dp</item>
		<item name="uiMonthDayNumbersOffsetVertical">32dp</item>
		<item name="android:horizontalSpacing">40dp</item>
		<item name="android:verticalSpacing">40dp</item>
		<item name="uiMonthTitleTextAppearance">@style/Ui.TextAppearance.Widget.MonthView.Title</item>
		<item name="uiMonthDayLetterTextAppearance">@style/Ui.TextAppearance.Widget.MonthView.DayLetter</item>
		<item name="uiMonthDayNumberTextAppearance">@style/Ui.TextAppearance.Widget.MonthView.DayNumber</item>
		<item name="uiMonthDaySelector">@drawable/ui_selector_month_day</item>
		<item name="uiMonthDaySelectorRadius">20dp</item>
		<item name="uiMonthCurrentDayTextColor">?attr/colorControlActivated</item>
	</style>

	<!-- Light style for MonthView widget. -->
	<style name="Ui.Widget.Light.MonthView" parent="Ui.Widget.MonthView">
		<item name="uiMonthTitleTextAppearance">@style/Ui.TextAppearance.Light.Widget.MonthView.Title</item>
		<item name="uiMonthDayLetterTextAppearance">@style/Ui.TextAppearance.Light.Widget.MonthView.DayLetter</item>
		<item name="uiMonthDayNumberTextAppearance">@style/Ui.TextAppearance.Light.Widget.MonthView.DayNumber</item>
	</style>
</resources>