<resources>

	<!-- AVAILABLE FONT FAMILIES

		Roboto regular                  [sans-serif]
		Roboto italic                   [sans-serif]
		Roboto bold                     [sans-serif]
		Roboto bold italic              [sans-serif]
		Roboto-Light                    [sans-serif-light]
		Roboto-Light italic             [sans-serif-light]
		Roboto-Thin                     [sans-serif-thin] (since Android 4.2)
		Roboto-Thin italic              [sans-serif-thin] (since Android 4.2)
		Roboto-Condensed                [sans-serif-condensed]
		Roboto-Condensed italic         [sans-serif-condensed]
		Roboto-Condensed bold           [sans-serif-condensed]
		Roboto-Condensed bold italic    [sans-serif-condensed]
		Roboto-Medium                   [sans-serif-medium] (since Android 5.0)
		Roboto-Medium italic            [sans-serif-medium] (since Android 5.0)

	-->

	<!-- ### SLIDER ============================================================================ -->

	<!-- TextAppearance style for discrete indicator's text of SeekBar's widget. -->
	<style name="Ui.TextAppearance.Widget.SeekBar.DiscreteIndicator" parent="Ui.TextAppearance.Widget.TextView.Medium">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<!-- Light TextAppearance style for discrete indicator's text of SeekBar's widget. -->
	<style name="Ui.TextAppearance.Light.Widget.SeekBar.DiscreteIndicator" parent="Ui.TextAppearance.Widget.SeekBar.DiscreteIndicator"/>

	<!-- ### PICKER ============================================================================ -->

	<!-- TextAppearance style for numbers text of NumberPicker widget. -->
	<style name="Ui.TextAppearance.Widget.NumberPicker"	parent="Ui.TextAppearance.Widget.TextView.Medium">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/ui_txt_number_picker</item>
	</style>

	<!-- Light TextAppearance style for numbers text of NumberPicker widget. -->
	<style name="Ui.TextAppearance.Light.Widget.NumberPicker"	parent="Ui.TextAppearance.Widget.NumberPicker">
		<item name="android:textColor">@color/ui_light_txt_number_picker</item>
	</style>

	<!-- Parent TextAppearance style for MontView widgets. -->
	<style name="Ui.TextAppearance.Widget.MonthView" parent="Ui.TextAppearance.Widget.TextView"/>

	<!-- TextAppearance style for title text of MonthView widget. -->
	<style name="Ui.TextAppearance.Widget.MonthView.Title" parent="Ui.TextAppearance.Widget.TextView.Medium">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!-- Light TextAppearance style for title text of MonthView widget. -->
	<style name="Ui.TextAppearance.Light.Widget.MonthView.Title" parent="Ui.TextAppearance.Widget.MonthView.Title"/>

	<!-- TextAppearance style for first letter of day name of MonthView widget. -->
	<style name="Ui.TextAppearance.Widget.MonthView.DayLetter">
		<item name="android:textColor">?android:attr/textColorSecondary</item>
		<item name="android:textSize">12sp</item>
	</style>

	<!-- Light TextAppearance style for first letter of day name of MonthView widget. -->
	<style name="Ui.TextAppearance.Light.Widget.MonthView.DayLetter" parent="Ui.TextAppearance.Widget.MonthView.DayLetter"/>

	<!-- TextAppearance style for day number text of MonthView widget. -->
	<style name="Ui.TextAppearance.Widget.MonthView.DayNumber">
		<item name="android:textColor">@color/ui_txt_month_day_number</item>
		<item name="android:textSize">13sp</item>
	</style>

	<!-- Light TextAppearance style for day number text of MonthView widget. -->
	<style name="Ui.TextAppearance.Light.Widget.MonthView.DayNumber" parent="Ui.TextAppearance.Widget.MonthView.DayNumber">
		<item name="android:textColor">@color/ui_light_txt_month_day_number</item>
	</style>
</resources>