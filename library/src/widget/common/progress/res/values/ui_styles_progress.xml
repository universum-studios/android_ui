<resources>

	<!-- ### PROGRESS BAR ====================================================================== -->

	<!-- ProgressBar widget parent style. -->
	<style name="Ui.Widget.ProgressBar">
		<item name="android:thickness">4dp</item>
		<item name="uiColorProgress">?attr/colorAccent</item>
		<item name="uiColorsProgress">@array/ui_colors_indeterminate_progress</item>
		<item name="uiMultiColored">false</item>
	</style>

	<!-- Style for CircularProgressBar widget. -->
	<style name="Ui.Widget.ProgressBar.Circular">
		<item name="android:minWidth">32dp</item>
		<item name="android:minHeight">32dp</item>
		<item name="android:maxWidth">32dp</item>
		<item name="android:maxHeight">32dp</item>
		<item name="uiCircularProgressMode">indeterminate</item>
	</style>

	<!-- Light style for CircularProgressBar widget. -->
	<style name="Ui.Widget.Light.ProgressBar.Circular" parent="Ui.Widget.ProgressBar.Circular"/>

	<!-- Style for small CircularProgressBar widget. -->
	<style name="Ui.Widget.ProgressBar.Circular.Small">
		<item name="android:thickness">3dp</item>
		<item name="android:minWidth">24dp</item>
		<item name="android:minHeight">24dp</item>
		<item name="android:maxWidth">24dp</item>
		<item name="android:maxHeight">24dp</item>
	</style>

	<!-- Light style for small CircularProgressBar widget. -->
	<style name="Ui.Widget.Light.ProgressBar.Circular.Small" parent="Ui.Widget.ProgressBar.Circular.Small"/>

	<!-- Style large CircularProgressBar widget. -->
	<style name="Ui.Widget.ProgressBar.Circular.Large">
		<item name="android:thickness">5dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:maxWidth">48dp</item>
		<item name="android:maxHeight">48dp</item>
	</style>

	<!-- Light style for large CircularProgressBar widget. -->
	<style name="Ui.Widget.Light.ProgressBar.Circular.Large" parent="Ui.Widget.ProgressBar.Circular.Large"/>

	<!-- Style for LinearProgressBar widget. -->
	<style name="Ui.Widget.ProgressBar.Linear">
		<item name="android:minHeight">4dp</item>
		<item name="uiLinearProgressMode">determinate</item>
	</style>

	<!-- Light style for LinearProgressBar widget. -->
	<style name="Ui.Widget.Light.ProgressBar.Linear" parent="Ui.Widget.ProgressBar.Linear"/>
</resources>