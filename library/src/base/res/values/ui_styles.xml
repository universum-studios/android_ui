<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ### PARENT STYLES ===================================================================== -->

    <!-- Parent style for widget styles. -->
    <style name="Ui.Widget" parent=""/>

	<!-- ### ACTIONBAR/TOOLBAR ================================================================= -->

	<!-- Style for Toolbar widget. -->
	<style name="Ui.Widget.Toolbar" parent="Ui.Base.Widget.Toolbar">
		<item name="android:background">?attr/colorPrimary</item>
		<item name="titleMarginStart">?attr/uiSpacingSecondary</item>
	</style>

	<!-- Light style for Toolbar widget. -->
	<style name="Ui.Widget.Light.Toolbar" parent="Ui.Widget.Toolbar"/>

	<!-- Style for ActionButton widget without icon with only text presented. -->
	<style name="Ui.Widget.ActionButton.Text" parent="Widget.AppCompat.ActionButton">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.ActionButton.Text</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingLeft">16dp</item>
	</style>

	<!-- Light style for ActionButton widget without icon with only text presented. -->
	<style name="Ui.Widget.Light.ActionButton.Text" parent="Ui.Widget.ActionButton.Text"/>

	<!-- ### ACTION MODE ======================================================================= -->

	<!-- Style for ActionMode widget. -->
	<style name="Ui.Widget.ActionMode" parent="Ui.Base.Widget.ActionMode">
		<item name="android:background">?attr/actionModeBackground</item>
		<item name="android:height">?attr/actionBarSize</item>
	</style>

	<!-- Light style for ActionMode widget. -->
	<style name="Ui.Widget.Light.ActionMode" parent="Ui.Widget.ActionMode"/>

	<!-- Style for close ActionButton of ActionMode widget. -->
	<style name="Ui.Widget.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
		<item name="android:layout_marginLeft">@dimen/ui_action_button_close_mode_margin_start</item>
		<item name="android:layout_marginRight">@dimen/ui_action_button_close_mode_margin_end</item>
	</style>

	<!-- Light style for close ActionButton of ActionMode widget. -->
	<style name="Ui.Widget.Light.ActionButton.CloseMode" parent="Ui.Widget.ActionButton.CloseMode"/>
</resources>