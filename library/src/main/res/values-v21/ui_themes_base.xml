<resources>

    <!-- Base theme. (API 21) -->
    <style name="Ui.Base.Theme" parent="Ui.Platform.Theme"/>

    <!-- Base light theme. (API 21) -->
    <style name="Ui.Base.Theme.Light" parent="Ui.Platform.Theme.Light"/>

    <!-- Material based theme. (API 21) -->
    <style name="Ui.Theme.Material" parent="Ui.Base.Theme">

        <!-- ## DRAWABLES ====================================================================== -->

        <item name="uiToolbarDropShadow">@null</item>
        <item name="uiCollectionItemBackground">?android:attr/selectableItemBackground</item>

        <!-- ## STYLES ========================================================================= -->

        <item name="android:switchStyle">@style/Ui.Widget.CompoundButton.Switch</item>

        <!-- ## ACTIONBAR/TOOLBAR ============================================================== -->

        <item name="android:toolbarStyle">?attr/toolbarStyle</item>

        <!-- ## ACTION MODE ==================================================================== -->

        <item name="android:windowActionModeOverlay">?attr/windowActionModeOverlay</item>
        <item name="android:actionModeBackground">?attr/actionModeBackground</item>
        <item name="android:actionModeCloseButtonStyle">?attr/actionModeCloseButtonStyle</item>
    </style>

    <!-- Material based light theme. (API 21) -->
    <style name="Ui.Theme.Light.Material" parent="Ui.Base.Theme.Light">

        <!-- ## DRAWABLES ====================================================================== -->

        <item name="uiToolbarDropShadow">@null</item>
        <item name="uiCollectionItemBackground">?android:attr/selectableItemBackground</item>

        <!-- ## STYLES ========================================================================= -->

        <item name="android:switchStyle">@style/Ui.Widget.Light.CompoundButton.Switch</item>

        <!-- ## ACTIONBAR/TOOLBAR ============================================================== -->

        <item name="android:toolbarStyle">?attr/toolbarStyle</item>

        <!-- ## ACTION MODE ==================================================================== -->

        <item name="android:windowActionModeOverlay">?attr/windowActionModeOverlay</item>
        <item name="android:actionModeBackground">?attr/actionModeBackground</item>
        <item name="android:actionModeCloseButtonStyle">?attr/actionModeCloseButtonStyle</item>
    </style>
</resources>