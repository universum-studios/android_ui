<resources>

    <!-- Platform based parent theme. -->
    <style name="Ui.Platform.Theme" parent="Theme.AppCompat"/>

    <!-- Platform based parent light theme. -->
    <style name="Ui.Platform.Theme.Light" parent="Theme.AppCompat.Light"/>

    <!-- Base theme specific for the Android 8 platform. -->
    <style name="Ui.Base.V8.Theme" parent="Ui.Platform.Theme">
        <item name="editTextBackground">@drawable/ui_edit_text</item>
    </style>

    <!-- Base light theme specific for the Android 8 platform. -->
    <style name="Ui.Base.V8.Theme.Light" parent="Ui.Platform.Theme.Light">
        <item name="editTextBackground">@drawable/ui_edit_text</item>
    </style>

    <!-- Base theme. -->
    <style name="Ui.Base.Theme" parent="Ui.Base.V8.Theme"/>

    <!-- Base light theme. -->
    <style name="Ui.Base.Theme.Light" parent="Ui.Base.V8.Theme.Light"/>

    <!-- Material based theme. -->
    <style name="Ui.Theme.Material" parent="Ui.Base.Theme">

        <!-- ## DRAWABLES ====================================================================== -->

        <item name="android:listChoiceIndicatorSingle">@drawable/ui_btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/ui_btn_check</item>
        <item name="uiCollectionItemBackground">@drawable/ui_bg_selectable_item</item>

        <!-- ## STYLES ========================================================================= -->

        <item name="android:buttonStyle">@style/Ui.Widget.Button</item>
        <item name="android:textAppearanceButton">@style/Ui.TextAppearance.Widget.Button</item>
        <item name="android:dropDownListViewStyle">@style/Ui.Widget.ListView.DropDown</item>
        <item name="android:checkboxStyle">@style/Ui.Widget.CompoundButton.CheckBox</item>
        <item name="android:radioButtonStyle">@style/Ui.Widget.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Ui.Widget.CompoundButton.Switch</item>
        <item name="android:seekBarStyle">@style/Ui.Widget.SeekBar</item>
        <item name="android:spinnerStyle">@style/Ui.Widget.Spinner</item>

        <!-- ## ACTIONBAR/TOOLBAR ============================================================== -->

        <item name="uiToolbarDropShadow">@drawable/ui_sdw_drop_toolbar</item>

        <!-- ## ACTION MODE ==================================================================== -->

        <item name="actionModeStyle">@style/Ui.Widget.ActionMode</item>
    </style>

    <!-- Material based light theme. -->
    <style name="Ui.Theme.Light.Material" parent="Ui.Base.Theme.Light">

        <!-- ## DRAWABLES ====================================================================== -->

        <item name="android:listChoiceIndicatorSingle">@drawable/ui_btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/ui_btn_check</item>
        <item name="uiCollectionItemBackground">@drawable/ui_light_bg_selectable_item</item>

        <!-- ## STYLES ========================================================================= -->

        <item name="android:buttonStyle">@style/Ui.Widget.Light.Button</item>
        <item name="android:textAppearanceButton">@style/Ui.TextAppearance.Widget.Button</item>
        <item name="android:dropDownListViewStyle">@style/Ui.Widget.Light.ListView.DropDown</item>
        <item name="android:checkboxStyle">@style/Ui.Widget.Light.CompoundButton.CheckBox</item>
        <item name="android:radioButtonStyle">@style/Ui.Widget.Light.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Ui.Widget.Light.CompoundButton.Switch</item>
        <item name="android:seekBarStyle">@style/Ui.Widget.Light.SeekBar</item>
        <item name="android:spinnerStyle">@style/Ui.Widget.Light.Spinner</item>

        <!-- ## ACTIONBAR/TOOLBAR ============================================================== -->

        <item name="uiToolbarDropShadow">@drawable/ui_sdw_drop_toolbar</item>

        <!-- ## ACTION MODE ==================================================================== -->

        <item name="actionModeStyle">@style/Ui.Widget.Light.ActionMode</item>
    </style>
</resources>