<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- FloatingActionButton theme attributes. -->
	<declare-styleable name="Ui.Theme.Fab">
		<!-- Style for FloatingActionButton widget. -->
		<attr name="uiFloatingActionButtonStyle" format="reference"/>
	</declare-styleable>

	<!-- FloatingActionButton attributes. -->
	<declare-styleable name="Ui.FloatingActionButton">
		<!-- Size of the FAB button. -->
		<attr name="uiFabSize">
			<enum name="normal" value="0x01"/>
			<enum name="mini" value="0x02"/>
		</attr>
	</declare-styleable>
</resources>