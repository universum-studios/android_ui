	<!-- Base style for SeekBar widget. -->
	<style name="Ui.Base.Widget.SeekBar" parent="Ui.Platform.Widget.SeekBar">
		<item name="android:progressDrawable">@drawable/ui_seek_bar_track</item>
		<item name="android:indeterminateDrawable">@drawable/ui_seek_bar_track</item>
		<item name="android:thumb">@drawable/ui_seek_bar_thumb</item>
		<item name="android:minHeight">4dp</item>
		<item name="android:maxHeight">4dp</item>
		<item name="android:thumbOffset">16dp</item>
	</style>
