<resources>

	<!-- ### TEXT FIELD ======================================================================== -->

	<!-- Style for TextView widget. -->
	<style name="Ui.Widget.TextView" parent="Ui.Base.Widget.TextView">
		<item name="android:textAppearance">?android:attr/textAppearance</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColor">@null</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColorHint">@null</item>
	</style>

	<!-- Light style for TextView widget. -->
	<style name="Ui.Widget.Light.TextView" parent="Ui.Widget.TextView"/>

	<!-- Style for EmptyView widget. -->
	<style name="Ui.Widget.EmptyView" parent="Ui.Widget.TextView">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.EmptyView</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">?attr/uiSpacingPrimary</item>
		<item name="android:paddingRight">?attr/uiSpacingPrimary</item>
		<item name="android:paddingTop">?attr/uiSpacingPrimary</item>
		<item name="android:paddingBottom">?attr/uiSpacingPrimary</item>
	</style>

	<!-- Light style for EmptyView widget. -->
	<style name="Ui.Widget.Light.EmptyView" parent="Ui.Widget.EmptyView"/>

	<!-- Style for EditText widget. -->
	<style name="Ui.Widget.EditText" parent="Ui.Base.Widget.EditText">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.EditText</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColor">@null</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColorHint">@null</item>
	</style>

	<!-- Light style for EditText widget. -->
	<style name="Ui.Widget.Light.EditText" parent="Ui.Widget.EditText"/>

	<!-- Style for AutoCompleteTextView widget. -->
	<style name="Ui.Widget.AutoCompleteTextView" parent="Ui.Base.Widget.AutoCompleteTextView">
		<item name="android:textAppearance">@style/Ui.TextAppearance.Widget.EditText</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColor">@null</item>
		<!-- Force to use color specified within text appearance. -->
		<item name="android:textColorHint">@null</item>
	</style>

	<!-- Light style for AutoCompleteTextView widget. -->
	<style name="Ui.Widget.Light.AutoCompleteTextView" parent="Ui.Widget.AutoCompleteTextView"/>
</resources>