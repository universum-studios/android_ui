<resources>

	<!-- AVAILABLE FONT FAMILIES

		Roboto regular                  [sans-serif]
		Roboto italic                   [sans-serif]
		Roboto bold                     [sans-serif]
		Roboto bold italic              [sans-serif]
		Roboto-Light                    [sans-serif-light]
		Roboto-Light italic             [sans-serif-light]
		Roboto-Thin                     [sans-serif-thin] (since Android 4.2)
		Roboto-Thin italic              [sans-serif-thin] (since Android 4.2)
		Roboto-Condensed                [sans-serif-condensed]
		Roboto-Condensed italic         [sans-serif-condensed]
		Roboto-Condensed bold           [sans-serif-condensed]
		Roboto-Condensed bold italic    [sans-serif-condensed]
		Roboto-Medium                   [sans-serif-medium] (since Android 5.0)
		Roboto-Medium italic            [sans-serif-medium] (since Android 5.0)

	-->

	<!-- ### TEXT ============================================================================== -->

	<!-- TextAppearance style for TextView widget. -->
	<style name="Ui.TextAppearance.Widget.TextView" parent="Ui.Base.TextAppearance.Widget.TextView">
		<item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!-- TextAppearance style for TextView widget with Thin font family. -->
	<style name="Ui.TextAppearance.Widget.TextView.Thin" parent="Ui.Base.TextAppearance.Widget.TextView.Thin"/>

	<!-- TextAppearance style for TextView widget with Condensed font family. -->
	<style name="Ui.TextAppearance.Widget.TextView.Condensed" parent="Ui.Base.TextAppearance.Widget.TextView.Condensed"/>

	<!-- TextAppearance style for TextView widget with Medium font family. -->
	<style name="Ui.TextAppearance.Widget.TextView.Medium" parent="Ui.Base.TextAppearance.Widget.TextView.Medium"/>
</resources>